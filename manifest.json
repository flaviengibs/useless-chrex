{
  "manifest_version": 3,
  "name": "Mode Sombre Auto",
  "version": "1.0",
  "description": "Active le mode sombre apr√®s 19h",
  "permissions": ["storage", "scripting", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": { 
      "128" : "img/apple.png.png" 
  }
}
